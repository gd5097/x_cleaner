{
    "manifest_version": 3,
    "name": "X Cleaner",
    "version": "1.0",
    "description": "X에서 트윗을 정리하는 크롬 확장입니다.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://x.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {        
        "128": "icons/128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  